<div class="resource_form">
  <div class="padding">
    <% form_tag url_for(options[:manage_url].is_a?(Symbol) ? send(options[:manage_url]) : options[:manage_url]) do %>
      <div class="resource_header">
        <%= render :partial => "resources/more_actions", :object => options[:more_actions] %>
      </div>
      <div class="resource_body">
        <% if resources.blank? %>
        <div class="no_resources">
          <%= options[:default_text] %>
        </div>
        <% else %>
        <table class="resource_table">
  
          <thead>
            <tr>
              <th class="resource_checkbox">Select</th>
            <% options[:headers].each_with_index do |header, index| %>
              <th class="<%= 'resource_' + options[:fields][index].to_s %>"><%= header.to_s %></th>
            <% end %>
            </tr>
          </thead>
  
          <% if resources.respond_to?(:total_pages) && resources.total_pages > 1 %>
          <tfoot>
            <tr>
              <td class="resource_pagination" colspan="<%= options[:fields].size + 1 %>"><%= will_paginate(resources) %></td>
            </tr>
          </tfoot>
          <% end %>
  
          <tbody>
            <% resources.each do |resource| %>
              <tr id="<%= resource_id(resource) %>" class="resource_row">
                <td class="resource_checkbox"><%= check_box_tag "ids[]", resource.id, false, :class => "resource_form_checkbox" %></td>
                <% options[:fields].each_with_index do |field, index| %>
                  <% if index == 0 && !options[:link_action].blank? %>
                <td class="<%= 'resource_' + field.to_s %>"><%= link_to resource.send(field.to_sym), {:controller => params[:controller], :action => options[:link_action].to_s, :id => resource} %></td>
                  <% else %>
                <td class="<%= 'resource_' + field.to_s %>"><%= resource.send(field.to_sym) %></td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
  
        </table>
        <% end %>
      </div>
    <% end %>
  </div>
</div>