!!! Strict
= render :partial => "shared/head/signature"
%html{:xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", :'xml:lang' => "en"}
  %head
    = render :partial => "shared/head/head_site"
  %body{:class => "application #{body_class(params[:controller], params[:id])} #{action_name}"}
    #wrap
      #mast_head
        #branding
          %h1
            = link_to @site.name, root_url
        = render :partial => "shared/nav_foundation"
      #page
        .padding
          .wrap.clearfix
            = render :partial => "shared/flash_messages"
            #page_header
              %h2
                = body_class(params[:controller], params[:id]) || "Homepage"
            #page_body
              = yield
            #page_sidebar
    = render :partial => "shared/footer"
    = render :partial => "shared/foundation_footer"